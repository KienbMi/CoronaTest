@page
@model CoronaTest.Web.Pages.NewRegistrationModel
@{
    ViewData["Title"] = "Neuanmeldung";
}

<h3>Neuanmeldung:</h3>
<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Firstname" class="control-label"></label>
            <input asp-for="Firstname" class="form-control" type="text">
            <span asp-validation-for="Firstname" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Lastname" class="control-label"></label>
            <input asp-for="Lastname" class="form-control" type="text">
            <span asp-validation-for="Lastname" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Birthdate" class="control-label"></label>
            <input asp-for="Birthdate" class="form-control" type="date">
            <span asp-validation-for="Birthdate" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Gender" class="control-label"></label>
            <select asp-for="Gender" class="form-control">
                <option value="" selected>Auswahl treffen</option>
                <option value="männlich">männlich</option>
                <option value="weiblich">weiblich</option>
                <option value="weitere">weitere</option>
            </select>
            <span asp-validation-for="Gender" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="SocialSecurityNumber" class="control-label"></label>
            <input asp-for="SocialSecurityNumber" class="form-control" type="text">
            <span asp-validation-for="SocialSecurityNumber" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Mobilephone" class="control-label"></label>
            <input asp-for="Mobilephone" class="form-control" type="text" placeholder="+43 ....">
            <span asp-validation-for="Mobilephone" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Street" class="control-label"></label>
            <input asp-for="Street" class="form-control" type="text">
            <span asp-validation-for="Street" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="HouseNumber" class="control-label"></label>
            <input asp-for="HouseNumber" class="form-control" type="text">
            <span asp-validation-for="HouseNumber" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Door" class="control-label"></label>
            <input asp-for="Door" class="form-control" type="text">
            <span asp-validation-for="Door" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Stair" class="control-label"></label>
            <input asp-for="Stair" class="form-control" type="text">
            <span asp-validation-for="Stair" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Postalcode" class="control-label"></label>
            <input asp-for="Postalcode" class="form-control" type="text">
            <span asp-validation-for="Postalcode" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" type="text">
            <span asp-validation-for="City" class="alert-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <button type="submit" class="btn btn-primary">Anmeldung starten</button>
        <a type="button" class="btn btn-secondary" asp-page="/Index">Abbrechen</a>
    </div>
</form>
