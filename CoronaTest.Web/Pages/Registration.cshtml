@page
@model CoronaTest.Web.Pages.RegistrationModel
@{
    ViewData["Title"] = "Neuanmeldung";
}

<h3>Neuanmeldung:</h3>
<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Participant.Firstname" class="control-label"></label>
            <input asp-for="Participant.Firstname" class="form-control" type="text">
            <span asp-validation-for="Participant.Firstname" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Participant.Lastname" class="control-label"></label>
            <input asp-for="Participant.Lastname" class="form-control" type="text">
            <span asp-validation-for="Participant.Lastname" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Participant.Birthdate" class="control-label"></label>
            <input asp-for="Participant.Birthdate" class="form-control" type="date">
            <span asp-validation-for="Participant.Birthdate" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Participant.Gender" class="control-label"></label>
            <select asp-for="Participant.Gender" class="form-control">
                <option value="" selected>Auswahl treffen</option>
                <option value="männlich">männlich</option>
                <option value="weiblich">weiblich</option>
                <option value="weitere">weitere</option>
            </select>
            <span asp-validation-for="Participant.Gender" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Participant.SocialSecurityNumber" class="control-label"></label>
            <input asp-for="Participant.SocialSecurityNumber" class="form-control" type="text">
            <span asp-validation-for="Participant.SocialSecurityNumber" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Participant.Mobilephone" class="control-label"></label>
            <input asp-for="Participant.Mobilephone" class="form-control" type="tel" placeholder="+43 ....">
            <span asp-validation-for="Participant.Mobilephone" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Participant.Street" class="control-label"></label>
            <input asp-for="Participant.Street" class="form-control" type="text">
            <span asp-validation-for="Participant.Street" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Participant.HouseNumber" class="control-label"></label>
            <input asp-for="Participant.HouseNumber" class="form-control" type="text">
            <span asp-validation-for="Participant.HouseNumber" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Participant.Door" class="control-label"></label>
            <input asp-for="Participant.Door" class="form-control" type="text">
            <span asp-validation-for="Participant.Door" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Participant.Stair" class="control-label"></label>
            <input asp-for="Participant.Stair" class="form-control" type="text">
            <span asp-validation-for="Participant.Stair" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Participant.Postalcode" class="control-label"></label>
            <input asp-for="Participant.Postalcode" class="form-control" type="text">
            <span asp-validation-for="Participant.Postalcode" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Participant.City" class="control-label"></label>
            <input asp-for="Participant.City" class="form-control" type="text">
            <span asp-validation-for="Participant.City" class="alert-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <button type="submit" class="btn btn-primary">Anmeldung starten</button>
        <a type="button" class="btn btn-secondary" asp-page="/Index">Abbrechen</a>
    </div>
</form>
